<h3>Dashboard</h3>
<h1>{{name}}</h1>
<p>Here are your stories</p>
{{#if stories}}
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each stories}}
        <tr>
          <td><a href='/stories/{{_id}}'>{{title}}</a></td>
          <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
          <td><span class='dash-status'>{{status}}</span></td>
          <td>
            <a href='/stories/edit/{{_id}}' class='btn btn-float'>
              <i class='fas fa-edit'></i></a>
            <form action='/stories/{{_id}}' method='POST'>
              <input type='hidden' name='_method' value='DELETE' />
              <button class='btn red'><i class='fas fa-trash'></i></button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>

{{else}}
  <p>You have not create any stories</p>
{{/if}}